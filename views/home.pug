block content
	#roomLabel Room One
	.row.text-center
		.col.align-self-center
			h1 Treasure Hunt
		.col.align-self-center
			.center-block#petprofilepic
		.col.align-self-center
			p#petname Bytes
		.col.align-self-center
			// Button trigger modal
			button.btn.btn-primary.btn-lg#initTreasureHuntStartButton.has(data-toggle='modal', data-target='#initTreasureHunt', data-treasureHuntIsActive=false)
